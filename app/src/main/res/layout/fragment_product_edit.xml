<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.dashboard.product.EditProductFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/rose"
                android:elevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_back_edit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tabIndicatorColor="@color/white"
                app:tabTextAppearance="@style/CustomTabLayout"
                app:tabTextColor="@color/white" />

            <TextView
                android:id="@+id/txt_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Product"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tabs"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.517">

            </TextView>

            <ImageButton
                android:id="@+id/btn_back_edit"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:paddingHorizontal="8dp"
                android:src="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="60dp"
                android:text="@string/barcode_require"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edt_barcode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_edit"
                android:ems="10"
                android:enabled="false"
                android:hint="@string/barcode"
                android:inputType="number"
                android:nextFocusDown="@id/edt_reference_product"
                android:padding="14dp"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/btn_copy"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="28dp"
                android:text="@string/reference"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_barcode" />

            <EditText
                android:id="@+id/edt_reference_product"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="200dp"
                android:background="@drawable/bg_edit"
                android:ems="10"
                android:hint="@string/reference"
                android:inputType="textPersonName"
                android:nextFocusDown="@id/edt_description_product"
                android:padding="14dp"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:text="@string/description_require"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_reference_product" />

            <EditText
                android:id="@+id/edt_description_product"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/bg_edit"
                android:ems="10"
                android:hint="@string/description"
                android:inputType="textPersonName"
                android:nextFocusDown="@id/edt_brand_product"
                android:padding="14dp"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:text="@string/brand"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_description_product" />

            <EditText
                android:id="@+id/edt_brand_product"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edit"
                android:ems="10"
                android:hint="@string/brand"
                android:inputType="textPersonName"
                android:nextFocusDown="@id/edt_provider_product"
                android:padding="14dp"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/edt_description_product"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <TextView
                android:id="@+id/txt_provider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/provider"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@+id/edt_provider_product"
                app:layout_constraintTop_toBottomOf="@+id/edt_description_product" />

            <EditText
                android:id="@+id/edt_provider_product"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edit"
                android:ems="10"
                android:hint="@string/provider"
                android:inputType="textPersonName"
                android:nextFocusDown="@id/edt_size_product"
                android:padding="14dp"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/edt_description_product"
                app:layout_constraintTop_toBottomOf="@+id/txt_provider" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:text="@string/size_require"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_brand_product" />

            <EditText
                android:id="@+id/edt_size_product"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edit"
                android:ems="10"
                android:hint="@string/size"
                android:inputType="textPersonName"
                android:nextFocusDown="@id/edt_color_product"
                android:padding="14dp"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/edt_brand_product"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/color"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@+id/edt_color_product"
                app:layout_constraintTop_toBottomOf="@+id/edt_provider_product" />


            <EditText
                android:id="@+id/edt_color_product"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edit"
                android:ems="10"
                android:hint="@string/color"
                android:inputType="textPersonName"
                android:nextFocusDown="@id/edt_cost_product"
                android:padding="14dp"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/edt_provider_product"
                app:layout_constraintStart_toStartOf="@+id/edt_provider_product"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:text="@string/cost_price"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_size_product" />

            <EditText
                android:id="@+id/edt_cost_product"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edit"
                android:ems="10"
                android:hint="@string/cost_price"
                android:inputType="number|numberDecimal"
                android:nextFocusDown="@id/edt_sales_product"
                android:padding="14dp"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/edt_size_product"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/sales_price"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@+id/edt_sales_product"
                app:layout_constraintTop_toBottomOf="@+id/edt_color_product" />

            <EditText
                android:id="@+id/edt_sales_product"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edit"
                android:ems="10"
                android:hint="@string/sales_price"
                android:inputType="number|numberDecimal"
                android:nextFocusDown="@id/rg_owner_product"
                android:padding="14dp"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/edt_color_product"
                app:layout_constraintStart_toStartOf="@+id/edt_color_product"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:text="@string/owner"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_cost_product" />

            <RadioGroup
                android:id="@+id/rg_owner_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11">

                <RadioButton
                    android:id="@+id/claudia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/white"
                    android:checked="true"
                    android:text="@string/claudia"
                    android:textColor="@color/white" />

                <RadioButton
                    android:id="@+id/claudenice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/white"
                    android:text="@string/claudenice"
                    android:textColor="@color/white" />
            </RadioGroup>


            <Button
                android:id="@+id/btn_update_product"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:backgroundTint="@color/pink"
                android:text="@string/update"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rg_owner_product" />

            <ImageView
                android:id="@+id/imv_photo"
                android:layout_width="145dp"
                android:layout_height="124dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:scaleType="centerCrop"
                android:src="@drawable/no_image"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@+id/edt_reference_product"
                app:layout_constraintTop_toBottomOf="@+id/edt_barcode" />

            <ImageView
                android:id="@+id/imv_plus"
                android:layout_width="34dp"
                android:layout_height="28dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="6dp"
                android:src="@drawable/ic_baseline_add_circle_24"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/imv_photo"
                app:layout_constraintEnd_toEndOf="@+id/imv_photo" />

            <ImageButton
                android:id="@+id/btn_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:src="@drawable/baseline_content_copy_24"
                app:layout_constraintBottom_toBottomOf="@+id/edt_barcode"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/edt_barcode" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
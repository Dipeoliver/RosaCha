<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp">

    <ImageView
        android:id="@+id/imv_add"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_keyboard_arrow_up"
        app:layout_constraintBottom_toBottomOf="@+id/qtyContainer"
        app:layout_constraintStart_toEndOf="@+id/qtyContainer"
        app:layout_constraintTop_toTopOf="@+id/qtyContainer" />

    <ImageView
        android:id="@+id/imv_sub"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_keyboard_arrow_down"
        app:layout_constraintBottom_toBottomOf="@+id/qtyContainer"
        app:layout_constraintEnd_toStartOf="@+id/qtyContainer"
        app:layout_constraintTop_toTopOf="@+id/qtyContainer" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/qtyContainer"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:helperTextTextColor="@android:color/holo_red_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_qty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_edit"
            android:gravity="center"
            android:inputType="number"
            android:lines="1"
            android:nextFocusDown="@id/edt_provider_product"
            android:text="1"
            android:textSize="20sp" />
    </com.google.android.material.textfield.TextInputLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
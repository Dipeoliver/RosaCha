<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edt_client_phone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_border_edit"
        android:ems="10"
        android:hint="@string/enter_phone"
        android:inputType="phone"
        android:padding="8dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_search1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_baseline_search_24"
        app:layout_constraintBottom_toBottomOf="@+id/edt_client_phone"
        app:layout_constraintStart_toEndOf="@+id/edt_client_phone"
        app:layout_constraintTop_toTopOf="@+id/edt_client_phone" />

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_border_edit"
        app:layout_constraintEnd_toEndOf="@+id/btn_search1"
        app:layout_constraintStart_toStartOf="@+id/edt_client_phone"
        app:layout_constraintTop_toBottomOf="@+id/edt_client_phone" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.clausfonseca.rosacha.view.onboarding.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_authentication"
            app:destination="@id/authentication"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_splashFragment_to_homeFragment2"
            app:destination="@id/home_fragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <navigation
        android:id="@+id/authentication"
        app:startDestination="@id/loginFragment">
        <deepLink
            android:id ="@id/authentication"
            app:uri="android-app://com.clausfonseca.rosacha/login_fragment" />
        <fragment
            android:id="@+id/registerFragment"
            android:name="com.clausfonseca.rosacha.view.onboarding.login.RegisterFragment"
            android:label="fragment_register"
            tools:layout="@layout/fragment_register" >
            <action
                android:id="@+id/action_registerFragment_to_loginFragment"
                app:destination="@id/loginFragment" />
        </fragment>
        <fragment
            android:id="@+id/recoverFragment"
            android:name="com.clausfonseca.rosacha.view.onboarding.login.RecoverFragment"
            android:label="fragment_recover"
            tools:layout="@layout/fragment_recover">


            <action
                android:id="@+id/action_recoverFragment_to_loginFragment"
                app:destination="@id/loginFragment" />
        </fragment>
        <fragment
            android:id="@+id/loginFragment"
            android:name="com.clausfonseca.rosacha.view.onboarding.login.LoginFragment"
            android:label="fragment_login"
            tools:layout="@layout/fragment_login">


            <argument
                android:name="email"
                app:argType="string" />
            <action
                android:id="@+id/action_loginFragment_to_registerFragment"
                app:destination="@id/registerFragment" />
            <action
                android:id="@+id/action_loginFragment_to_recoverFragment"
                app:destination="@id/recoverFragment" />
        </fragment>
        <action
            android:id="@+id/action_global_homeFragment"
            app:destination="@id/home_fragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
    </navigation>
    <fragment
        android:id="@+id/home_fragment"
        android:name="com.clausfonseca.rosacha.view.dashboard.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <deepLink app:uri="android-app://com.clausfonseca.rosacha/home_fragment" />
        <action
            android:id="@+id/action_home_fragment_to_clientFragment"
            app:destination="@id/clientFragment" />
        <action
            android:id="@+id/action_home_fragment_to_price_fragment"
            app:destination="@id/price_fragment" />
        <action
            android:id="@+id/action_home_fragment_to_product_fragment"
            app:destination="@id/product_fragment" />
        <action
            android:id="@+id/action_home_fragment_to_sales_fragment"
            app:destination="@id/sales_fragment" />
    </fragment>

    <fragment
        android:id="@+id/product_fragment"
        android:name="com.clausfonseca.rosacha.view.dashboard.product.ProductFragment"
        android:label="ProductFragment"
        tools:layout="@layout/fragment_product">
        <action
            android:id="@+id/action_product_fragment_to_home_fragment"
            app:destination="@id/home_fragment" />
        <action
            android:id="@+id/action_product_fragment_to_price_fragment"
            app:destination="@id/price_fragment" />
        <action
            android:id="@+id/action_product_fragment_to_clientFragment"
            app:destination="@id/clientFragment" />
        <action
            android:id="@+id/action_product_fragment_to_sales_fragment"
            app:destination="@id/sales_fragment" />
    </fragment>
    <fragment
        android:id="@+id/price_fragment"
        android:name="com.clausfonseca.rosacha.view.dashboard.price.PriceFragment"
        android:label="fragment_price"
        tools:layout="@layout/fragment_price" >
        <action
            android:id="@+id/action_price_fragment_to_home_fragment"
            app:destination="@id/home_fragment" />
        <action
            android:id="@+id/action_price_fragment_to_clientFragment"
            app:destination="@id/clientFragment" />
        <action
            android:id="@+id/action_price_fragment_to_product_fragment2"
            app:destination="@id/product_fragment" />
        <action
            android:id="@+id/action_price_fragment_to_sales_fragment"
            app:destination="@id/sales_fragment" />
    </fragment>
    <fragment
        android:id="@+id/sales_fragment"
        android:name="com.clausfonseca.rosacha.view.dashboard.sales.SalesFragment"
        android:label="SalesFragment"
        tools:layout="@layout/fragment_sales">
        <action
            android:id="@+id/action_sales_fragment_to_home_fragment"
            app:destination="@id/home_fragment" />
        <action
            android:id="@+id/action_sales_fragment_to_clientFragment"
            app:destination="@id/clientFragment" />
        <action
            android:id="@+id/action_sales_fragment_to_price_fragment"
            app:destination="@id/price_fragment" />
        <action
            android:id="@+id/action_sales_fragment_to_product_fragment"
            app:destination="@id/product_fragment" />
    </fragment>
    <fragment
        android:id="@+id/addClientFragment"
        android:name="com.clausfonseca.rosacha.view.dashboard.client.AddClientFragment"
        android:label="fragment_add_client"
        tools:layout="@layout/fragment_add_client" >
        <deepLink app:uri="android-app://com.clausfonseca.rosacha/fragment_add_client" />
        <argument
            android:name="ArgsClient"
            app:argType="com.clausfonseca.rosacha.model.Client"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/clientFragment"
        android:name="com.clausfonseca.rosacha.view.dashboard.client.ClientFragment"
        android:label="fragment_client"
        tools:layout="@layout/fragment_client"
        >
        <action
            android:id="@+id/action_clientFragment_to_home_fragment"
            app:destination="@id/home_fragment" />
        <action
            android:id="@+id/action_clientFragment_to_price_fragment"
            app:destination="@id/price_fragment" />
        <action
            android:id="@+id/action_clientFragment_to_product_fragment"
            app:destination="@id/product_fragment" />
        <action
            android:id="@+id/action_clientFragment_to_sales_fragment"
            app:destination="@id/sales_fragment" />
    </fragment>
</navigation>
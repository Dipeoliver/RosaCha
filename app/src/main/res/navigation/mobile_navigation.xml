<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_splash_screen_fragment">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.rosachaclausfonseca.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/nav_client"
        android:name="com.example.rosachaclausfonseca.ui.client.ClientFragment"
        android:label="@string/menu_client"
        tools:layout="@layout/fragment_client" />
    <fragment
        android:id="@+id/nav_inventory"
        android:name="com.example.rosachaclausfonseca.ui.inventory.InventoryFragment"
        android:label="@string/menu_inventory"
        tools:layout="@layout/fragment_inventory" />
    <fragment
        android:id="@+id/nav_price"
        android:name="com.example.rosachaclausfonseca.ui.price.PriceFragment"
        android:label="@string/menu_price"
        tools:layout="@layout/fragment_price" />
    <fragment
        android:id="@+id/nav_sales"
        android:name="com.example.rosachaclausfonseca.ui.sales.SalesFragment"
        android:label="@string/menu_sales"
        tools:layout="@layout/fragment_sales" />
    <fragment
        android:id="@+id/nav_splash_screen_fragment"
        android:name="com.example.rosachaclausfonseca.SplashScreenFragment"
        tools:layout="@layout/fragment_splash_screen" />
    <action
        android:id="@+id/action_splashScreenFragment_to_nav_home"
        app:destination="@id/nav_home" />
</navigation>